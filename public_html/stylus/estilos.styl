@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181


.border-bottom
  border-bottom 1px solid gris_claro

a
  text-decoration none

//buttons

.button-menu
  position absolute
  top 50%
  margin-top -10px
  left .5em

body
  font-size 16px
  font-family: 'Varela Round'  sans-serif

figure 
  margin 0
  
.song
  width 128px
  display inline-block
  font-size 1rem
  margin-right 1em
  margin-bottom 1em
  text-align left
  p 
    margin .5em 0
  &:nth-child(even)
    margin-right 0

.container
  font-size 0px
  padding 1.4rem
  text-align center


.name
  color gris_oscuro


.author
  color gris_claro


.menu
  display none

.header
  height 3.5em
  position relative
  .title  
    font-size 1.1em
    text-align center
    line-height 3.5em
  

